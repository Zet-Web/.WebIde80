%form#form_id{:action => "", :method => "post"}
  %fieldset
    %legend The Form
    %div
      %label{:for => "text_field"} Text Field
      %input#text_field{:name => "text_field", :type => "text"}/
    %div
      %label{:for => "password_field"} Password Field
      %input#password_field{:name => "password_field", :type => "password"}/
    %div
      %label Radio Buttons
      %input{:name => "button", :type => "radio", :value => "1"}/
      Button 1
      %input{:name => "button", :type => "radio", :value => "2"}/
      Button 2
    %div
      %label{:for => "checkbox"} Checkbox
      %input#checkbox{:name => "checkbox", :type => "checkbox", :value => "checkme"}/
    %div
      %label{:for => "select_choice"} Dropdown:
      %select#select_choice{:name => "select_choice"}
        %option{:value => "Choice 1"} Choice 1
        %option{:value => "Choice 2"} Choice 2
        %option{:value => "Choice 3"} Choice 3
    %div
      %label{:for => "textarea"} Textarea:
      %textarea#textarea{:cols => "40", :name => "textarea", :rows => "8"}